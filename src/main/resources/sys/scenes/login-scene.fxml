<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sys.controller.LoginController">
   <children>
      <VBox fx:id="launcher_signInPage" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" visible="false">
         <children>
            <ImageView fitHeight="159.0" fitWidth="159.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Logo/Logo_Big_WorldBank.png" />
               </image>
            </ImageView>
            <TextField fx:id="loginPage_userName" alignment="CENTER" maxHeight="40.0" maxWidth="320.0" prefHeight="40.0" prefWidth="320.0" promptText="Sign In">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="loginPage_password" alignment="CENTER" maxHeight="40.0" maxWidth="320.0" prefHeight="40.0" prefWidth="320.0" promptText="Password" />
            <Button fx:id="btn_logIn" mnemonicParsing="false" onAction="#launchMainApplication" prefHeight="40.0" prefWidth="200.0" text="Log In" />
            <Button id="backButton" mnemonicParsing="false" onAction="#toMainPage" prefHeight="40.0" prefWidth="120.0" text="Back" />
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" />
         </padding>
      </VBox>
      <VBox fx:id="launcher_mainPage" alignment="CENTER" prefHeight="550.0" prefWidth="400.0" spacing="20.0" visible="false">
        <padding>
          <Insets bottom="40.0" left="20.0" right="20.0" />
        </padding>
         <children>
            <ImageView fitHeight="237.0" fitWidth="280.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Logo/Logo_Big_WorldBank.png" />
               </image>
            </ImageView>
            <Button fx:id="btn_signIn" mnemonicParsing="false" onAction="#toSignInPage" prefHeight="40.0" prefWidth="200.0" text="Sign In" />
            <Button fx:id="btn_createAccount" mnemonicParsing="false" onAction="#toCreateAccountPage" prefHeight="40.0" prefWidth="200.0" text="Create Account" />
         </children>
      </VBox>
      <VBox fx:id="launcher_createAccountPage" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
         <children>
            <ImageView fitHeight="159.0" fitWidth="159.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Logo/Logo_Big_WorldBank.png" />
               </image>
            </ImageView>
            <TextField fx:id="createAccountPage_userName" alignment="CENTER" maxHeight="40.0" maxWidth="320.0" prefHeight="40.0" prefWidth="320.0" promptText="Username">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="createAccountPage_password" alignment="CENTER" maxHeight="40.0" maxWidth="320.0" prefHeight="40.0" prefWidth="320.0" promptText="Password" />
            <PasswordField fx:id="createAccountPage_confirmPassword" alignment="CENTER" maxHeight="40.0" maxWidth="320.0" prefHeight="40.0" prefWidth="320.0" promptText="Confirm Password" />
            <Button fx:id="btn_createAccount" mnemonicParsing="false" onAction="#onCreateAccount" prefHeight="40.0" prefWidth="200.0" text="Create Account" />
            <Button id="backButton" mnemonicParsing="false" onAction="#toMainPage" prefHeight="40.0" prefWidth="120.0" text="Back" />
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
